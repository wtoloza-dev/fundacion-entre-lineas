---
// SectionTitle component

const { orientation } = Astro.props;
---

<div class={`section-title section-title--${orientation}`}>
  <slot />
</div>

<style lang="scss">
  .section-title {
    width: 100%;
    height: 200px;
    background-color: $color-secondary;
    border-left: 60px solid $border-color;
    color: $color-bg-light;
  }

  .section-title--left {
    margin-left: 20%;
  }

  .section-title--right {
    margin-right: 20%;
  }
</style>
