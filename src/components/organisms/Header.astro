---
// Header component
---

<div class="header-content">
  <div class="logo">
    <div class="logo-icon"></div>
    <h1 class="logo-text">Entrelíneas</h1>
  </div>

  <nav class="navigation">
    <a href="#quienes-somos" class="nav-link">Quiénes somos</a>
    <a href="#que-hacemos" class="nav-link">Qué hacemos</a>
    <a href="#actividades" class="nav-link">Actividades</a>
    <a href="#galeria" class="nav-link">Galería</a>
    <a href="#colaboradores" class="nav-link">Colaboradores</a>
    <a href="#contacto" class="nav-link">Contacto</a>
  </nav>
</div>

<style lang="scss">
  .header-content {
    height: $header-height;
    background-color: $color-bg-dark;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-family: $font-family;
    padding: $spacing-lg;
    gap: $spacing-md;
  }

  .logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: $spacing-sm;
  }

  .logo-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(45deg, #fbbf24, #f59e0b);
    border-radius: $border-radius;
    position: relative;

    &::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 20px;
      height: 20px;
      background: $color-bg-dark;
      border-radius: 2px;
    }
  }

  .logo-text {
    margin: 0;
    color: #fbbf24;
    font-size: $font-size-xl;
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .navigation {
    display: flex;
    gap: $spacing-lg;
    flex-wrap: wrap;
    justify-content: center;
  }

  .nav-link {
    color: white;
    text-decoration: none;
    font-size: $font-size-base;
    font-weight: 500;
    padding: $spacing-sm $spacing-md;
    border-radius: $border-radius;
    transition: all 0.2s ease;

    &:hover {
      color: #fbbf24;
      background-color: rgba(251, 191, 36, 0.1);
      transform: translateY(-1px);
    }
  }

  @media (max-width: 768px) {
    .navigation {
      gap: $spacing-md;
    }

    .nav-link {
      font-size: $font-size-sm;
      padding: $spacing-xs $spacing-sm;
    }
  }
</style>
